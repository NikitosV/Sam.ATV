@using Sitecore.Mvc
@model Sam.ATV.Web.Areas.ATV.Models.ViewModels.OrderSearchResultsViewModel


<style>
    .card img {
        width: 100%;
        height: 325px;
    }
</style>
<div class="text-center">
    Its your orders:
</div>
@if (Model.Results.Count != 0)
{
    <div class="row mt-2">
        @foreach (var result in Model.Results)
        {
            <div class="col-md-6">
                @*align-self-between*@
                <div class="card mb-4 shadow-sm">
                    <div class="view view-cascade overlay">
                    </div>
                    <div class="card-body">
                        @* card-body-cascade*@
                        <p class="card-text">
                            <div>
                                <b>Bike Name:</b> @result.BikeName
                            </div>
                            <div>
                                <b>Price:</b> @result.Price $
                            </div>
                        </p>
                        @*<button class="btn btn-sm btn-outline-success" type="submit">Want</button>*@
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h2 class="text-center text-danger display-4">Empty result!</h2>
}

<script>
    pageTotal = @Model.CountOrders;
    $('#page-total').text(Math.round(pageTotal / pageSize));
</script>
