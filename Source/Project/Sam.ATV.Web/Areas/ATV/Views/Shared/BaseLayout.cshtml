@using Sitecore.Mvc

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <script type="text/javascript" src="~/Scripts/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <div>
        @Html.Sitecore().Placeholder("Header")
    </div>
    <div class="container">
        <div class="">
            @Html.Sitecore().Placeholder("SliderContent")
        </div>
        @*<div class="album bg-light text-left">
            @Html.Sitecore().Placeholder("MainContent")
        </div>*@
        <div>
            @Html.Sitecore().Placeholder("SearchBike")
        </div>
        <div>
            @Html.Sitecore().Placeholder("PaginationContent")
        </div>
    </div>

    <footer id="sticky-footer" class="py-4 bg-dark text-white-50">
        <div class="footer-copyright text-center py-3">
            © 2019 Copyright: @Html.Sitecore().Field("Footer")
        </div>
    </footer>
</body>
</html>
