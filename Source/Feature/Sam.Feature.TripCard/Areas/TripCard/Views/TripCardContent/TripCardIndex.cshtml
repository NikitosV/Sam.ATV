@using Sitecore.Mvc
@using Sam.Feature.TripCard.Areas.TripCard.Models.ViewModels
@model TripCardViewModel

<style>
    .card img {
        width: 100%;
        height: 325px;
    }
</style>

<div class="col-md-6">@*align-self-between*@
    <div class="card mb-4 shadow-sm">
        <div class="view view-cascade overlay">
            <div class="bd-placeholder-img card-img-top" alt="Card image cap">@Html.Sitecore().Field("Image")</div>
            <a>
                <div class="mask rgba-white-slight"></div>
            </a>
        </div>
        <div class="card-body">@* card-body-cascade*@
                <p class="card-text">
                    <div>
                        <b>Title:</b> @Html.Sitecore().Field("Title")
                    </div>
                    <div>
                        <b>Description:</b> @Html.Sitecore().Field("Description")
                    </div>
                    <div>
                        <b>Start Date:</b> @Html.Sitecore().Field("StartDate")
                    </div>
                    <div>
                        <b>End Date:</b> @Html.Sitecore().Field("EndDate")
                    </div>
                    <div>
                        <b>Price:</b> @Html.Sitecore().Field("Price") $
                    </div>
                </p>
                <hr />
                <button class="btn btn-sm btn-outline-success" type="submit">Want</button>
            </div>
    </div>
</div>