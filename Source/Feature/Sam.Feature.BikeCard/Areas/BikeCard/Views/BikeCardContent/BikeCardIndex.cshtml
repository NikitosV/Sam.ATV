@using Sitecore.Mvc
@using Sam.Feature.BikeCard.Areas.BikeCard.Models.ViewModels
@model BikeCardViewModel

<div class="row">
    <style>
        .card img {
            width: 100%;
            height: 225px;
        }
    </style>

    <div class="col-md-4 align-self-between">
        <div class="card mb-4 shadow-sm">
            <div class="view view-cascade overlay">
                <div class="bd-placeholder-img card-img-top" alt="Card image cap">@Html.Sitecore().Field("Image")</div>
                <a>
                    <div class="mask rgba-white-slight"></div>
                </a>
            </div>
            <div class="card-body card-body-cascade">
                <p class="card-text">
                    <div>
                        <b>Name:</b> @Html.Sitecore().Field("Name")
                    </div>
                    <div>
                        <b>Type Engine:</b> @Html.Sitecore().Field("Type Engine")
                    </div>
                    <div>
                        <b>Max Speed:</b> @Html.Sitecore().Field("Max Speed") km / hour
                    </div>
                    <div>
                        <b>Fuel:</b> @Html.Sitecore().Field("Fuel") L / 100 km
                    </div>
                    <div>
                        <b>Description:</b> @Html.Sitecore().Field("Description")
                    </div>
                    <div>
                        <b>Price:</b> @Html.Sitecore().Field("Price") $
                    </div>
                </p>
                <hr />
                <button class="btn btn-sm btn-outline-success" type="submit">Buy</button>
            </div>
        </div>
    </div>

</div>