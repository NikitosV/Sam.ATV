@model Sam.Feature.BikeCard.Areas.BikeCard.Models.ViewModels.BikeCardViewModel

<div class="col-md-4 align-self-between">
    <div class="card mb-4 shadow-sm">
        <div class="view view-cascade overlay">
            <img class="bd-placeholder-img card-img-top" style="width:100%; height:225px" alt="Card image cap" />
            <a>
                <div class="mask rgba-white-slight"></div>
            </a>
        </div>
        <div class="card-body card-body-cascade">
            <p class="card-text">
                <div>
                    <b>Name:</b> @Model.Name
                </div>
                <div>
                    <b>Type Engine:</b> @Model.TypeEngine
                </div>
                <div>
                    <b>Max Speed:</b> @Model.MaxSpeed km / hour
                </div>
                <div>
                    <b>Fuel:</b> @Model.Fuel L / 100 km
                </div>
                <div>
                    <b>Description:</b> @Model.Description
                </div>
                <div>
                    <b>Price:</b> @Model.Price $
                </div>
            </p>
            <hr />
            <button class="btn btn-sm btn-outline-success" type="submit">Buy</button>
        </div>
    </div>
</div>
